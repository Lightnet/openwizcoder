<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="start" controller="org.openwizcoder.ui.UIClientScreenController">
        <layer childLayout="center">
        <panel width="40%" height="40%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">
            <control name="label" text="Client Login" />
            <panel height="21px" childLayout="horizontal"/>
            <panel height="21px" childLayout="horizontal">
                 <control name="label" text="User:" />
                 <panel width="*" />
                <control width="128px" name="textfield" text="guest" />
             </panel>   
             <panel height="21px" childLayout="horizontal">    
                 <control name="label" text="Pass:" />
                 <panel width="*" />
                <control width="128px" name="textfield" text="guest" />
            
            </panel>
            <panel height="21px" childLayout="horizontal"/>
            <panel height="21px" childLayout="horizontal">
                <control id="buttonOk" name="button" label="Ok">
                    <interact onClick="SendClientMessage()"/>
                </control>
                <panel width="*" />
                <control id="buttonOk" name="button" label="Cancel">
                    <interact onClick="SendClientMessage()"/>
                </control>
            </panel>
        </panel>
        </layer>
    </screen>
    <screen id="end">
    </screen>
</nifty>