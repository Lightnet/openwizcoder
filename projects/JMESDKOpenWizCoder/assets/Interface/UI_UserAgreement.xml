<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="start" controller="org.openwizcoder.ui.UIClientScreenController">
        <layer childLayout="center">
        <panel width="90%" height="80%" align="center" valign="center" childLayout="vertical" backgroundColor="#55a5" padding="10">

            <panel height="80%" childLayout="horizontal">
                <control id="scrollbarPanelId" name="scrollPanel" horizontal="true" height="100%" width="100%">
          <!-- first child is the content, the area to scroll around -->
                    <panel id="myScrollStuff" width="1000px" height="1000px" childLayout="vertical">
                        <effect>
                            <onActive name="gradient" direction="vertical">
                                <value offset="0%" color="#ffff" />
                                <value offset="100%" color="#f00f" />
                            </onActive>
                            <onActive name="gradient" direction="horizontal">
                                <value offset="0%" color="#ffff" />
                                <value offset="100%" color="#0f0f" />
                            </onActive>
                        </effect>
                    </panel>
                </control>
                
            </panel>

            <panel height="21px" childLayout="horizontal">
            </panel>
            <panel height="21px" childLayout="horizontal">
                <control id="buttonOk" name="button" label="Agree">
                    <interact onClick="SendClientMessage()"/>
                </control>
                
                <control id="buttonOk" name="button" label="Disagree">
                    <interact onClick="SendClientMessage()"/>
                </control>
            </panel>
            
            
        </panel>
        </layer>
    </screen>
    <screen id="end">
    </screen>
</nifty>